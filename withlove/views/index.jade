extends layout

block title
  title= title

block styles
  link(href="/external/bootstrap-3.3.5-dist/css/bootstrap.min.css" rel="stylesheet")
  link(rel='stylesheet', href='/stylesheets/style.css')


block scripts
  script(src="/external/jquery-1.11.3.min.js")
  script(src="/external/bootstrap-3.3.5-dist/js/bootstrap.min.js")
  script(src="/javascripts/index.js")

block content

  div.navbar.navbar-top
    div.container-fluid(style="max-height: 100%")
      div.row(style="max-height: 100px")
        img.withLoveLogo(src="/images/logo_words.png" alt="With Love" style="max-height:100px; max-width:40%; float:left")
        //img.withLoveLogo(src="/images/logo_description.png" alt="With Love" style="max-height:100px; max-width:50%; float:left")
        div(style="background: url(/images/logo_description.png) no-repeat center;")
        //span.topHeaderFont(style="max-height:100px; max-width:100%; float:left; font: ") Preserved & Artificial Flowers
        img.withLoveLogo(src="/images/logo_flower.png" alt="With Love Flower Logo" style="max-height:100px; max-width:10%; float:right")
      //div.row(style="max-height: 100px")
        div.col-md-4(style="max-height: 100px")
          img.withLoveLogo(src="/images/logo_words.png" alt="With Love" style="max-height:100px; max-width:100%; float:left")
        div.col-md-6(style="overflow:hidden; display:inline-block") Preserved Flower & Artificial Flower
        div.col-md-2(style="max-height: 100px")
          img.withLoveLogo(src="/images/logo_flower.png" alt="With Love Flower Logo" style="max-height:100px; max-width:100%; float:right")

  nav.navbar.navbar-default
    div.container-fluid
      div.navbar-header
        button.navbar-toggle.collapsed(type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar

      div.collapse.navbar-collapse#bs-example-navbar-collapse-1
        ul.nav.navbar-nav
          li.active
            a.navOption(href="#") With Love
              span.sr-only (current)
          li
            a.navOption(href="#") Preserved Flowers
          li
            a.navOption(href="#") Lesson
          li
            a.navOption(href="#") Wedding
          li
            a.navOption(href="#") Order / Shop
          li
            a.navOption(href="#") Contact

  div.sideNavBar
    ul.menu.nav.navbar-inverse(role="tablist")
      li
        a(href="#") Hello
      li
        a(href="#") 2
      li
        a(href="#") 3

  div.mainContent
    h1= title
    p Welcome to #{title}
